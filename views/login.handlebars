<div class="login_container">

    <div class="container-log-reg">

        <div class="form-box">
            <!--    log in ---------------------------------------------->
            <form class="form" action="./login" method="post" autocomplete="off">
            <div class="login-box ">
                <div class="title">Log in</div>

                <div class="subtitle">Reconnect with Your Thoughts</div>
                <p class="message">{{message}}</p>

                <div class="input-container ic1">
                    <input placeholder="" type="text"name="username" class="input" id="username" required >
                    <div class="cut"></div>
                    <label class="iLabel" for="username">Username</label>
                </div>

                <div class="input-container ic1">
                    <input placeholder="" type="password" name="password" class="input" id="password" required>
                    <div class="cut"></div>
                    <label class="iLabel" for="password">Password</label>
                </div>

                <button class="submit" type="text">Journey Begins</button>
            </div>
            </form>

            <!--register---------------------------->
            <form class="form" action="./newAccount" method="post" autocomplete="off">
            <div class="register-box hidden ">
                <div class="title">Register</div>
                <div class="subtitle">Blog away with a click!</div>
                <p class="message">{{message}}</p>

                <div class="input-container ic1">
                    <input placeholder="" type="text" name="userName" class="input" id="user_username" required onblur="checkUsername()">
                    <div class="cut"></div>
                    <label class="iLabel" for="user_username">Username</label>
                    <div id="username_error" ></div>
                </div>
                <div class="input-container ic2">
                    <input placeholder="" type="password" name="password" class="input" id="user_password" required>
                    <div class="cut"></div>
                    <label class="iLabel" for="user_password">Password</label>

                </div>

                <div class="input-container ic2">
                    <input placeholder="" type="password" name="password_repeat" class="input" id="user_password_repeat" required onkeyup="checkPassword()">
                    <div class="cut"></div>
                    <label class="iLabel" for="user_password">Password</label>
                    <div id="password_error" ></div>
                </div>

                <button class="submit" id="submit_button" type="text" disabled>Join the journey</button>
            </div>
            </form>
        </div>


        <div class="con-box left">
            <h2> Your Blog Awaits You</h2>
            <img src="./image/background2.jpg">
            <button id="login">Log in</button>
        </div>

        <div class="con-box right">
            <h2> Need an account?</h2>
            <img src="./image/background2.jpg">
            <button id="register">Register</button>
        </div>


    </div>
</div>

<script src="./controllers/loginController.js"></script>
